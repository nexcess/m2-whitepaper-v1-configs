?>

<?php if ($block->hasSamples()): ?>
    <dl class="items samples">
        <dt class="item-title samples-item-title"><?php /* @escapeNotVerified */ echo $block->getSamplesTitle() ?></dt>
        <?php $_samples = $block->getSamples() ?>
        <?php foreach ($_samples as $_sample): ?>
            <dd class="item samples-item">
                <a href="<?php /* @escapeNotVerified */ echo $block->getSampleUrl($_sample) ?>" <?php echo $block->getIsOpenInNewWindow() ? 'onclick="this.target=\'_blank\'"' : ''; ?>
                   class="item-link samples-item-link">
                    <?php echo $block->escapeHtml($_sample->getTitle()) ?>
                </a>
            </dd>
        <?php endforeach; ?>
    </dl>
<?php endif; ?>
